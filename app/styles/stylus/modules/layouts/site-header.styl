//
// Layouts / Site Header
// -------------------------------------------------- //

.site-header {
  position relative
  flex-shrink 0
  padding 30px 30px 0
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content space-between
  align-items flex-start

  @media (max-width: 979px) {
    padding 12px 23px 0

    .logo {
      width 58px
      height 36px
      margin-left 0
      z-index 1200
    }
    .main-nav,
    .main-nav + .btn {
      display none
    }
    .mobile-nav-handler {
      display inline-block
      z-index 1200
    }
  }
  @media (max-width: 1279px) and (min-width: 980px) {
    .logo {
      width 113px
      height 70px
      background-size 113px 70px
      margin-left 7px
    }
  }
  @media (max-width: 1279px) and (min-width: 980px) {
    .main-nav + .btn {
      position relative
      top 13px
      font-size 1.2rem
      padding 13px 28px

      &:after {
        border-radius 5px
      }
    }
  }
  @media (max-width: 1679px) and (min-width: 1280px) {
    .logo {
      width 131px
      height 82px
      background-size 131px 82px
      top -19px
    }
    .main-nav {
      margin-left 10px

      li {
        margin-left 15px
        margin-right 15px
      }
    }
  }
  @media (min-width: 1680px) {
    .main-nav {
      margin-left 60px
    }
  }

  .logo {
    display block
    width 58px
    height 36px
    background url(../img/static/logo.svg) no-repeat 0 0/58px 36px
    margin-left 19px
    flex-shrink 0
    flex-grow 0
  }
  .main-nav {
    margin 9px 0 0 -50px

    @media (max-width: 1279px) and (min-width: 980px) {
      margin 23px 0 0 21px

      li {
        margin-right 7px
        margin-left 7px
      }
      a {
        font-size 1.2rem
      }
    }

    ul {
      list-style none
      margin 0
      padding 0
    }
    li {
      display inline-block
      margin 0 20px
    }
    a {
      text-transform uppercase
      font-size 1.4rem
      font-weight bold
      text-decoration none
    }
    [data-icon],
    .icon {
      color brand-primary
      vertical-align -9px
      margin-right 12px
    }
  }
  .mobile-nav-handler {
    display none
    position absolute
    right 15px
    top 12px
    width 49px
    height 41px
    padding 9px
    z-index 3

    &.active {
      .bar:first-child {
        transform rotate(45deg) translateY(6px) translateX(8px)
      }
      .bar:nth-child(2) {
        opacity 0
      }
      .bar:last-child {
        transform rotate(-45deg) translateY(-5px) translateX(7px)
      }
    }

    .bar {
      display block
      border-radius 4px
      width 30px
      height 5px
      background-color brand-primary
      transition transform .15s, opacity .15s

      & + .bar {
        margin-top 4px
      }
    }
  }
}
