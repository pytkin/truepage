      width 33.33334%
      padding-bottom 33.33334%

      &:last-child {
        display none
      }
    }

    &:hover {
      .block-inner {
        &:before {
          opacity .4
        }
        .icon,
        [data-icon] {
          opacity 1
        }
      }
    }

    .block-inner {
      position absolute
      top 0
      left 0
      display flex
      flex-wrap nowrap
      flex-direction column
      justify-content center
      align-items center
      padding 35px
      width 100%
      height 100%

